<%
require 'json'
items = links_sorted_by_date.map do |link|
  {
    id: site_config.base_url + link.path,
    url: site_config.base_url + link.path,
    title: link[:title],
    content_html: link.compiled_content,
    date_published: Time.parse(link[:published]).xmlschema
  }
end
feed = {
  version: 'https://jsonfeed.org/version/1.1',
  title: "Phillip's Links",
  home_page_url: site_config.base_url,
  feed_url: site_config.base_url + '/feed/links.json',
  items: items
}
%><%= JSON.pretty_generate(feed) %>

<%
require 'json'
items = photos_sorted_by_date.map do |photo|
  {
    id: site_config.base_url + photo.path,
    url: site_config.base_url + photo.path,
    title: photo[:title],
    content_html: photo.compiled_content,
    date_published: photo[:date].xmlschema
  }
end
feed = {
  version: 'https://jsonfeed.org/version/1.1',
  title: "Phillip's Photos",
  home_page_url: site_config.base_url,
  feed_url: site_config.base_url + '/feed/photos.json',
  items: items
}
%><%= JSON.pretty_generate(feed) %>

<%
require 'json'
items = posts_sorted_by_date.map do |post|
  {
    id: site_config.base_url + post.path,
    url: site_config.base_url + post.path,
    title: post[:title],
    content_html: post.compiled_content,
    date_published: post[:date].xmlschema
  }
end
feed = {
  version: 'https://jsonfeed.org/version/1.1',
  title: "Phillip's Notes",
  home_page_url: site_config.base_url,
  feed_url: site_config.base_url + '/feed/notes.json',
  items: items
}
%><%= JSON.pretty_generate(feed) %>
